<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
            android:text="Oops!Something went wrong!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/titleTextView" android:layout_weight="1"
            android:textSize="18sp"
            tools:text="Oops!Something went wrong!" tools:ignore="HardcodedText" android:textColor="#000000"
            android:textStyle="bold" android:textAllCaps="false" android:gravity="center_horizontal"
            android:paddingTop="16dp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:fillViewport="true" android:isScrollContainer="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="match_parent" android:layout_height="525dp" android:id="@+id/errTextView"
                      android:text="some errors here..." android:textSize="18sp" android:gravity="fill_horizontal"
                      android:layout_weight="1">
            </TextView>
        </LinearLayout>
    </ScrollView>
    <Button android:layout_width="240dp" android:layout_height="wrap_content" android:textAlignment="center"
            android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/copyBtn"
            android:baselineAligned="false">
    </Button>
    <Button android:layout_width="240dp" android:layout_height="wrap_content" android:textAlignment="center"
            android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/exitBtn"
            android:baselineAligned="false">
    </Button>
</LinearLayout>

